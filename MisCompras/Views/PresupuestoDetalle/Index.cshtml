@model IEnumerable<MisCrompras.Models.PresupuestoDetalle>

@{
    ViewData["Title"] = "Todos";
    Layout = "_LayoutConMenu";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <h3>
                    Detalle de Presupuesto
                </h3>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5><a href="~/PresupuestoDetalle/create/@ViewData["PresupuestoId"]"><i class="fa fa-plus">Agregar</i></a> </h5>
                </div>
                <div class="card-body">
                    <div class="dt-ext table-responsive">

                        @*<table id="export-button" class="display">*@
                        @*<table id="basic-1" class="display">*@
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Categoria)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Monto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Usuario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaCreacion)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Monto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario.User)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaCreacion)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a href="~/Presupuesto/Index">Regresar</a>
    </div>
</div>
