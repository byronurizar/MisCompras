@model MisCrompras.Models.PresupuestoDetalle

@{
    ViewData["Title"] = "Eliminar";
    Layout = "_LayoutConMenu";
}
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <h3>
                    Eliminar Detalle de Presupuesto
                </h3>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i></a></li>
                    <li class="breadcrumb-item">Detalle de Presupuesto </li>
                    <li class="breadcrumb-item active">Eliminar Item</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="form-builder">
    <div class="row">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h5>Detalle</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Presupuesto)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Presupuesto.Nombre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Categoria.Nombre)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Categoria)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Monto)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Monto)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.FechaCreacion)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FechaCreacion)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Usuario)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Usuario.User)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Estado)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Estado.Descripcion)
                            </dd>

                        </dl>
                    </div>

                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-primary" /> |
                        <a href="~/PresupuestoDetalle/Index/@Model.PresupuestoId">Regresar a listado</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
