    <script>

        function alerta(titulo, mensaje, tipo) {
            $.notify({
                title: titulo,
                message: mensaje
            },
                {
                    type: tipo,
                    allow_dismiss: true,
                    newest_on_top: false,
                    mouse_over: false,
                    showProgressbar: false,
                    spacing: 10,
                    timer: 1000,
                    placement: {
                        from: 'top',
                        align: 'center'
                    },
                    offset: {
                        x: 30,
                        y: 30
                    },
                    delay: 500,
                    z_index: 10000,
                    animate: {
                        enter: 'animated bounce',
                        exit: 'animated bounce'
                    }
                });
        }
    </script>

